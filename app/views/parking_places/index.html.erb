

<div class="container">
  <div class="table-title">
    <h3>Parking places</h3>
  </div>
  <div class="listWrap">
    <% if @parking_places.present? %>
      <ul class="list">
        <li>
            <span>Address</span>
            <span>Owner name</span>
            <span>Owner contact</span>
            <span>avail spaces</span>
            <span>total spaces</span>
            <span>Actions</span>
        </li>
        <% @parking_places.each do |parking_place| %>
          <li>
            <span><%= parking_place.full_address %></span>
            <span><%= parking_place.owner_name%></span>
            <span><%= parking_place.owner_number %></span>
            <span>
              <span class="badge"><%= parking_place.avail_spaces %></span>
            </span>
            <span>
              <span class="badge"><%= parking_place.total_spaces %></span>    
            </span>
            <span>
              <div class="btn-group btn-group-xs" role="group" aria-label="...">
                <button type="button" class="btn btn-primary" disabled>Edit</button>
                <button type="button" class="btn btn-danger" disabled>Delete</button>
              </div>
            </span>
          </li>
        <% end %>
        <li>

        </li>
      </ul>
    <% else %>
      <h2>No Parking places available!!!!</h2>
    <% end %>
  </div>
</div>

